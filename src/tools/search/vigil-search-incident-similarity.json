{
  "name": "vigil-search-incident-similarity",
  "type": "search",
  "description": "Find similar past incidents using vector search on investigation summaries",
  "tags": ["vigil", "investigator"],
  "agent": "vigil-investigator",
  "index": "vigil-incidents",
  "retrieval_strategy": "knn",
  "vector_field": "investigation_summary_vector",
  "filter": { "term": { "status": "resolved" } },
  "result_fields": [
    "incident_id",
    "investigation_summary",
    "resolution_type",
    "remediation_plan",
    "total_duration_seconds"
  ],
  "max_results": 3,
  "min_score": 0.7
}
